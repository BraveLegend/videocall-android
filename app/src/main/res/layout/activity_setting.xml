<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_transparent"
            android:gravity="center_vertical" >
            <Button
                android:id="@+id/set_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/ease_mm_title_back"
                android:onClick="onSettingback" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#424242"
                android:layout_centerVertical="true"
                android:text="@string/set" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <RelativeLayout
                    android:id="@+id/rl_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:background="@drawable/em_btn_bottom_selector">
                    <ImageView
                        android:id="@+id/headImage"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:textSize="14sp"
                        android:typeface="serif" />
                    <TextView
                        android:id="@+id/nickname_edit"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|left"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="98dp"
                        android:layout_centerVertical="true"
                        android:typeface="serif"/>
                    <RelativeLayout
                        android:id="@+id/btn_myInfo"
                        android:layout_width="47.14dp"
                        android:layout_height="47.14dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true">
                        <Button
                            android:layout_width="5.14dp"
                            android:layout_height="8.99dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/em_ic_right_arrow" />
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:id="@+id/rl_switch_video"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:background="@drawable/em_btn_bottom_selector">
                        <TextView
                            android:layout_width="62dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:gravity="left|center_vertical"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:text="@string/video"/>
                        <com.easemob.videocall.ui.widget.EaseSwitchButton
                            android:id="@+id/switch_video"
                            android:layout_width="48dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_switch_audio"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:background="@drawable/em_btn_bottom_selector">
                        <TextView
                            android:layout_width="62dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/microphone"/>/>
                        <com.easemob.videocall.ui.widget.EaseSwitchButton
                            android:id="@+id/switch_audio"
                            android:layout_width="48dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_switch_vibrate"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:background="@drawable/em_btn_bottom_selector">
                        <TextView
                            android:layout_width="62dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/video_resolution" />
                        <Spinner
                            android:id="@+id/spinner_video_resolution"
                            android:layout_width="140dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_switch_audience"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@drawable/em_btn_bottom_selector">
                    <TextView
                        android:layout_width="102dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/switch_audience" />
                    <com.easemob.videocall.ui.widget.EaseSwitchButton
                        android:id="@+id/switch_audience"
                        android:layout_width="48dp"
                        android:layout_height="26dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp" />
                </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_switch_record"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:background="@drawable/em_btn_bottom_selector">
                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/setrecord"/>
                        <com.easemob.videocall.ui.widget.EaseSwitchButton
                            android:id="@+id/switch_record"
                            android:layout_width="48dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_switch_merge_stream"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:background="@drawable/em_btn_bottom_selector">
                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/mergerstream"/>/>
                        <com.easemob.videocall.ui.widget.EaseSwitchButton
                            android:id="@+id/switch_merge_stream"
                            android:layout_width="48dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_switch_push_cdn"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:background="@drawable/em_btn_bottom_selector">

                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/pushcdn"
                            android:textColor="#333333"
                            android:textSize="14sp" />/>

                        <com.easemob.videocall.ui.widget.EaseSwitchButton
                            android:id="@+id/switch_push_cdn"
                            android:layout_width="48dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_set_cdn_url"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:background="@drawable/em_btn_bottom_selector">
                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/set_cdn_url"/>/>
                        <RelativeLayout
                            android:id="@+id/btn_set_cdn_url"
                            android:layout_width="47.14dp"
                            android:layout_height="47.14dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true">
                            <Button
                                android:layout_width="5.14dp"
                                android:layout_height="8.99dp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/em_ic_right_arrow" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_switch_push_audio_stream"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:background="@drawable/em_btn_bottom_selector">

                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/push_audio_stream"
                            android:textColor="#333333"
                            android:textSize="14sp" />/>

                        <com.easemob.videocall.ui.widget.EaseSwitchButton
                            android:id="@+id/switch_push_audio_stream"
                            android:layout_width="48dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_switch_record_format"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:background="@drawable/em_btn_bottom_selector">

                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/stream_record_format"
                            android:textColor="#333333"
                            android:textSize="14sp" />/>

                        <Spinner
                            android:id="@+id/spinner_record_format"
                            android:layout_width="140dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_switch_use_shaxiang"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:background="@drawable/em_btn_bottom_selector">
                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/use_customize_server"
                            android:textColor="#333333"
                            android:textSize="14sp" />
                        <com.easemob.videocall.ui.widget.EaseSwitchButton
                            android:id="@+id/switch_use_shaxiang"
                            android:layout_width="48dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_push_settings"
                        android:layout_width="match_parent"
                        android:layout_height="66dp">
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="20dp"
                            android:text="@string/upload_log_info"
                            android:layout_centerVertical="true"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp" />
                        <Button
                            android:id="@+id/btn_upload_log"
                            android:layout_width="76dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:textColor="#00AFEF"
                            android:text="上传日志"
                            android:textSize="14sp"
                            android:background="@color/color_transparent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>