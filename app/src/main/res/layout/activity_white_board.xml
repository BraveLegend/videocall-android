<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="3dp">
    <FrameLayout
        android:id="@+id/whiteboard_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>
    <TextView
        android:id="@+id/btn_whiteboard_destory"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/em_destory_whiteboard"/>
    <TextView
        android:id="@+id/btn_whiteboard_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/em_whiteborad_back"/>
</RelativeLayout>
