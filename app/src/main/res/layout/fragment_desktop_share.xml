<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/card_view_layout_hangup"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/gray_pressed"
        app:layout_constraintBottom_toTopOf="@id/card_view_two">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/btn_desktop_share"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/cancel_mute"
                android:background="#fff"
                android:foreground="@drawable/em_ripple_click_gray"
                android:gravity="center"
                android:text="屏幕共享"
                android:textColor="@color/black_deep"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/btn_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="@color/gray_pressed"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/btn_whiteboard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="55dp"
                android:background="#fff"
                android:foreground="@drawable/em_ripple_click_gray"
                android:gravity="center"
                android:text="白板"
                android:textColor="@color/black_deep"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_two"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/bnt_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="34dp"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/black_deep"
            android:textSize="16sp"
            android:background="#fff"
            android:foreground="@drawable/em_ripple_click_gray"/>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>