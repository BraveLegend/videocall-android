<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rlg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_surface_container"
    android:animateLayoutChanges="true"
    android:background="#3C3C3C">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hyphenate.media.EMCallSurfaceView
            android:id="@+id/desktop_share_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/desktop_share_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3C3C3C">
        <ImageView
            android:id="@+id/desktop_headImage_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/color_transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/em_default_avatar" />
        <TextView
            android:id="@+id/desktop_nickname_view"
            android:layout_below="@id/desktop_headImage_view"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@color/color_transparent"
            android:scaleType="centerCrop"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#FFFFFF"
            android:text="lijian"
            android:textSize="15sp"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/whiteboard_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
    </FrameLayout>
    <TextView
        android:id="@+id/btn_whiteboard_destory"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:visibility="invisible"
        android:background="@drawable/em_destory_whiteboard"/>
    <TextView
        android:id="@+id/btn_whiteboard_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="88dp"
        android:visibility="invisible"
        android:background="@drawable/em_whiteborad_back"/>

    <LinearLayout
        android:id="@+id/loading_stream_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_loading_bg"
        android:orientation="vertical"
        android:padding="16.0dip"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:indeterminateDrawable="@drawable/progress_drawable_white" />
    </LinearLayout>
</RelativeLayout>