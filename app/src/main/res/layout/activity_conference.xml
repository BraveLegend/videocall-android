<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rlg="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dd232323"
    android:orientation="vertical"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:id="@+id/ll_top_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#1C1C1A"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Meeting_roomId"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/Meeting_duration"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="00:00:00"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
        <RelativeLayout
            android:id="@+id/call_audio_device_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/call_audio_device"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:background="@drawable/em_call_speaker_on" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/call_switch_camera_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="68dp">
            <TextView
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/em_call_camera_toggle" />
        </RelativeLayout>
        <RelativeLayout
           android:id="@+id/call_hangup_layout"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_marginTop="10dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="16dp">
        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/em_call_hangup"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    </RelativeLayout>
    <com.easemob.videocall.ui.widget.NoScrollViewPager
        android:id="@+id/conference_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#3C3C3C"/>
    <RelativeLayout
        android:id="@+id/ll_surface_baseline"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1C1C1A">
            <RelativeLayout
                android:id="@+id/btn_call_mic_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_call_mic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/em_call_mic_on" />
                <TextView
                    android:id="@+id/text_call_mic"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="静音"
                    android:textColor="#CCCCCC"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_call_video_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_call_video"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/em_call_video_on" />
                <TextView
                    android:id="@+id/text_call_video"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:textColor="#CCCCCC"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="关闭视频"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_call_hangup_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btn_call_hangup"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/em_call_hangup"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/text_call_hangup"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:textColor="#CCCCCC"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="挂断"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_desktop_share_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_desktop_share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#CCCCCC"
                    android:textSize="10sp"
                    android:background="@drawable/call_screenshare" />
                <TextView
                    android:id="@+id/text_desktop_share"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:textColor="#CCCCCC"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="共享桌面"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_talker_list_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_talker_list"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/em_call_member"/>
                <TextView
                    android:id="@+id/text_talker_list"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:textColor="#CCCCCC"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="成员"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_more_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_whiteboard"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="#CCCCCC"
                    android:textSize="10sp"
                    android:background="@drawable/em_call_more"/>
                <TextView
                    android:id="@+id/text_whiteboard"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:textColor="#CCCCCC"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="更多"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>