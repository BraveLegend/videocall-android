<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    >
    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        >
        <com.hyphenate.easeui.widget.AvatarImageView
            android:id="@+id/img_call_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="centerCrop"
            app:aiv_TextSizeRatio="0.3"
            app:aiv_BoarderColor="@color/white"
            app:aiv_BoarderWidth="2dp"
            android:src="@drawable/em_default_avatar"
            />
        <FrameLayout
            android:id="@+id/mp_call_small_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/icon_mute"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/em_click_circle_red"
            android:clickable="false"
            android:focusable="false"
            android:padding="2dp"
            android:src="@drawable/ic_mic_off_white_24dp"
            />
        <ImageView
            android:id="@+id/icon_talking"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/em_click_circle_green"
            android:clickable="false"
            android:focusable="false"
            android:padding="2dp"
            android:src="@drawable/ic_volume_up_white_24dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_name"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="10sp"/>
</LinearLayout>